---
import { SITE_TITLE } from '../consts'
import Container from './Container.astro'
import SpaceBackground from './SpaceBackground'
---

<div class="relative flex h-[85vh] flex-col justify-center bg-gradient-to-b from-black/50">
  <SpaceBackground client:only="react" />
  <div
    class="absolute inset-0 z-10 bg-[radial-gradient(circle_at_top,_var(--tw-gradient-stops))] from-transparent via-transparent to-slate-950"
  >
  </div>
  <div class="relative z-20 animate-slide-in text-slate-300">
    <Container className="opacity-80">
      <h1 class="mb-2 text-7xl font-thin sm:text-9xl">
        <span
          class="inline-block bg-gradient-to-r from-slate-200 to-slate-300 bg-clip-text text-transparent"
        >
          {SITE_TITLE}
        </span><span class="hidden text-base md:inline"> (arel alkım yurtsevenler) </span>
      </h1>
      <div class="mb-2 text-4xl">software developer</div>
      <div class="md:hidden">(arel alkım yurtsevenler)</div>
    </Container>
  </div>
</div>

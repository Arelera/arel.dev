---
import type { CollectionEntry } from 'astro:content'
import TechPill from './TechPill.astro'

type Props = CollectionEntry<'projects'>
const project = Astro.props
---

<!-- border border-dashed border-slate-800 -->
<div
  class:list={[
    'bg-rain bg-clip rounded-lg p-6 px-8',
    project.data.isFinished && 'transition-transform duration-200 hover:scale-105',
  ]}
>
  <h3 class="mb-1 text-lg font-medium text-slate-200">
    {project.data.isFinished ? project.data.name : 'TBA'}
  </h3>
  <div class="mb-2 flex flex-wrap gap-2">
    {project.data.technologies.map((tech) => <TechPill tech={tech} />)}
  </div>
  <p class="line-clamp-3 text-sm text-slate-400">
    {
      project.body || (
        <span class="italic text-slate-500">
          A project made with {project.data.technologies.join(', ')}.
        </span>
      )
    }
  </p>
</div>
